# ============================================
# ANDE FAUCET - BACKEND CONFIGURATION
# ============================================

# Node Environment
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
RPC_URL=https://rpc.ande.network
RPC_FALLBACK_URL=https://rpc-backup.ande.network
CHAIN_ID=6174
CHAIN_NAME=AndeChain

# Faucet Wallet Configuration
FAUCET_PRIVATE_KEY=your_private_key_here_from_genesis_or_funded_account
FAUCET_ADDRESS=0x... # Auto-derived from private key

# Transaction Configuration
FAUCET_AMOUNT=10
FAUCET_AMOUNT_WEI=10000000000000000000
GAS_LIMIT=21000
GAS_PRICE_MULTIPLIER=1.2
MAX_PRIORITY_FEE=2000000000
MAX_FEE_PER_GAS=20000000000

# ============================================
# RATE LIMITING
# ============================================
# Per IP
RATE_LIMIT_IP_WINDOW_MS=3600000
RATE_LIMIT_IP_MAX_REQUESTS=5

# Per Address
RATE_LIMIT_ADDRESS_WINDOW_MS=86400000
RATE_LIMIT_ADDRESS_MAX_REQUESTS=1

# Global
RATE_LIMIT_GLOBAL_WINDOW_MS=60000
RATE_LIMIT_GLOBAL_MAX_REQUESTS=100

# Cooldown
COOLDOWN_HOURS=24

# ============================================
# CAPTCHA (hCaptcha)
# ============================================
HCAPTCHA_SECRET=your_hcaptcha_secret_key
HCAPTCHA_ENABLED=true
HCAPTCHA_SITE_KEY=your_hcaptcha_site_key

# ============================================
# REDIS (Cache & Rate Limiting)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
REDIS_KEY_PREFIX=ande-faucet:

# ============================================
# POSTGRESQL (Audit Logs & Analytics)
# ============================================
DATABASE_URL=postgresql://faucet:password@localhost:5432/ande_faucet
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# QUEUE (Bull)
# ============================================
QUEUE_ENABLED=true
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# ============================================
# MONITORING
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# Alerts
ALERT_LOW_BALANCE_THRESHOLD=100
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL=admin@ande.network

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=https://faucet.ande.network,http://localhost:3000
HELMET_ENABLED=true
BODY_LIMIT=10kb

# API Keys (Admin)
ADMIN_API_KEY=your_secure_admin_api_key_here
ADMIN_TOKEN=your_secure_admin_token_here

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/faucet.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# ============================================
# FEATURES FLAGS
# ============================================
FEATURE_QUEUE_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ADMIN_PANEL_ENABLED=true
FEATURE_WALLET_CONNECT=true

# ============================================
# PERFORMANCE
# ============================================
CACHE_TTL=300
TRANSACTION_TIMEOUT=60000
REQUEST_TIMEOUT=30000

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
PRETTY_LOGS=false
